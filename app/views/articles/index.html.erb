<h1>Articles listing page</h1>
<div class="container-sm">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @articles.each do |article| %>
                <tr>
                    <th scope="row"><%= article.id %></th>
                    <td><%= article.title %></td>
                    <td><%= article.description %></td>
                    <td>Placeholder</td>
                </tr>
                <% end%>
        </tbody>
    </table>
</div>
